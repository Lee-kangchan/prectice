<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.future.practice.domain.board.mapper.CommentMapper">

    <!--댓글 추가-->
    <insert id="insertComment" parameterType="Comment">
        INSERT INTO COMMENT(comment_content, comment_created_at, comment_modified_at, comment_board_seq)
        VALUES (#{commentContent}, #{commentCreatedAt}, #{commentModifiedAt}, #{commentBoardSeq})
    </insert>
    <!--댓글 조회-->
    <select id="selectComment" parameterType="Board" resultType="Comment">
        SELECT * FROM COMMENT
        WHERE comment_board_seq = #{commentBoardSeq}
    </select>
    <!--댓글 삭제-->
    <delete id="deleteComment" parameterType="Comment">
        DELETE FROM COMMENT WHERE comment_seq = #{commentSeq}
    </delete>
    <!--대댓글 추가-->
    <insert id="insertBigComment" parameterType="BigComment">
        INSERT INTO BIG_COMMENT(big_comment_content, big_comment_created_at, big_comment_modified_at, big_comment_board_seq)
        VALUES (#{bigCommentContent}, #{bigCommentCreatedAt}, #{bigCommentModifiedAt}, #{bigCommentBoardSeq})
    </insert>
    <!--대댓글 조회-->
    <select id="selectBigComment" parameterType="Comment" resultType="BigComment">
        SELECT * FROM BIG_COMMENT FROM big_comment_comment_seq = #{comment_seq};
    </select>
    <!--대댓글 삭제-->
    <delete id="deleteBigComment" parameterType="BigComment">
        DELETE FROM BIG_COMMENT WHERE big_comment_seq = #{bigCommentSeq}
    </delete>
</mapper>
