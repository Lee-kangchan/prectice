<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.future.practice.domain.board.mapper.BoardMapper">

    <!--게시물 추가-->
    <insert id="insertBoard" parameterType="Board">
        INSERT BOARD(board_title, board_content, board_user_seq, board_created_at, board_modified_at)
        VALUES (boardTitle, boardContent, boardUserSeq, boardCreatedAt, boardModifiedAt)
    </insert>

    <!--게시물 변경-->
    <update id="updateBoard" parameterType="Board">
        UPDATE BOARD set board_title = #{boardTitle}, board_content = #{boardContent}, board_modifiedAt = #{boardModifiedAt}
        WHERE board_seq = #{boardSeq}
    </update>

    <!--게시물 삭제-->
    <delete id="deleteBoard" parameterType="Board">
        DELETE FROM BOARD WHERE board_seq = #{boardSeq}
    </delete>

    <!--게시물 조회-->
    <select id="selectBoard" resultType="Board">
        SELECT * FROM BOARD
    </select>

    <!--게시물 상세 조회-->
    <select id="selectBoardDetail" parameterType="Board" resultType="Board">
        SELECT * FROM BOARD WHERE board_seq = #{boardSeq}
    </select>

</mapper>
